<config>
    <sections>
        <catalog>
            <groups>
                <productalert>
                    <fields>
                        <enabled translate="label">
                            <label>Product alerts for product configrations enabled</label>
                            <show_in_store>1</show_in_store>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <frontend_type>select</frontend_type>
                        </enabled>
                        <oos_helper_text translate="label">
                            <label>Text for 'out of stock' helper link</label>
                            <show_in_store>1</show_in_store>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <frontend_type>text</frontend_type>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </oos_helper_text>
                        <oos_modal translate="label">
                            <label>CMS Block to use as 'out of stock' helper message</label>
                            <show_in_store>1</show_in_store>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <frontend_type>select</frontend_type>
                            <source_model>simpleproductalert/source_cms_block</source_model>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </oos_modal>
                    </fields>
                </productalert>
            </groups>
        </catalog>
    </sections>
</config>
